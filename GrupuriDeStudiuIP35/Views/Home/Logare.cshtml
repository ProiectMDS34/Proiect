@model GrupuriDeStudiuIP35.UTILIZATORI

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    
    <center> <p style="color:red; font-size:large"> @ViewBag.Message </p> </center> 
   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div >
            <div >
                <center>
                    <section id="loginForm">
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div style = "font-size:17px;">
                            @Html.LabelFor(model => model.Email)
                            <div >
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
 
                        <div style="font-size:17px;">
                            @Html.LabelFor(model => model.Parola)
                            <div >
                                @Html.PasswordFor(model => model.Parola, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Parola, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />

                        <div >
                            <div >
                                <input type="submit" value="Login" class="btn btn-default" />
                            </div>
                        </div>

                    </section>
                </center>
            </div>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>

</html>
